<Window x:Class="MonthCalendar.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:calendar="clr-namespace:Pabo.MonthCalendar;assembly=Pabo.MonthCalendar"
        Title="MainWindow" Height="796" Width="896">
  <Grid Margin="0,0,23,29">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <calendar:MonthCalendar 
                            Year="2020" Month="8" 
                            Header="true"
                            Footer="true" 
                            Weekdays="True"
                            SelectionMode="Multiple"
                            Days="{Binding Path=Days, Mode=OneWay}" Margin="10,10,24,-10"
                            SelectionChanged="MonthCalendar_SelectionChanged"
                            MonthChanged="MonthCalendar_MonthChanged" >
    </calendar:MonthCalendar>
  </Grid>
</Window>
