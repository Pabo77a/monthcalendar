  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\bricks.jpeg" />
    <None Remove="Resources\star.png" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MonthCalendar\MonthCalendar.csproj" />
